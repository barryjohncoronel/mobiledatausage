<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
            android:padding="8dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/data_usage_text_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/data_usage_year_label"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/data_usage_text_year_value"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/data_usage_text_year_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/data_usage_text_year_label"
                app:layout_constraintEnd_toStartOf="@+id/data_usage_img_warning"
                app:layout_constraintBaseline_toBaselineOf="@+id/data_usage_text_year_label"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/data_usage_volume_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/data_usage_volume_label"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/data_usage_volume_value"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/data_usage_text_year_label"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/data_usage_volume_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/data_usage_volume_label"
                app:layout_constraintEnd_toEndOf="@+id/data_usage_text_year_value"
                app:layout_constraintBaseline_toBaselineOf="@+id/data_usage_volume_label"/>

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/data_usage_img_warning"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/data_usage_text_year_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_warning_black_24dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>